{
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "/service-worker.js",
        "destination": "/static/service-worker.js"
      },
      {
        "source": "/manifest.json",
        "destination": "/static/manifest.json"
      },
      {
        "source": "/",
        "function": "app"
      },
      {
        "source": "/@(_next)/**/*",
        "function": "app"
      }
    ],
    "headers": [
      {
        "source": "/service-worker.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      },
      {
        "source": "/manifest.json",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      },
      {
        "source": "/",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=60"
          }
        ]
      },
      {
        "source": "/static/*/*.png",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "functions": {
    "source": "app"
  }
}
